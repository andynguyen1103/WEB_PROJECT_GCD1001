{% extends 'base.html.twig' %}
{% block title %}Sign In{% endblock %}
{% block body %}
    <body>
    <div class="container">
        <form action="" method="POST" class="login-email">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <p class="login-text" style="font-size: 2rem; font-weight: 800;">Sign In</p>
            <div class="input-group">
                <input type="text" for="inputEmail" placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" required>
            </div>
            <div class="input-group">
                <input type="password" for="inputPassword" placeholder="Password" name="password" id="inputPassword" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
            <div class="input-group">
                <button class="btn" type="submit">
                    Sign In
                </button>
            </div>
            <p class="login-register-text">Don't have an account? <a href="{{ path('app_register') }}">Sign Up</a>.</p>
        </form>
    </div>
    </body>
{% endblock %}




