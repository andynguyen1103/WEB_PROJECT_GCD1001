{% extends 'base.html.twig' %}
{% block title %}Create User{% endblock %}
{% block body %}
<body>
<div class="container">
    <form method="POST" class="login-email">
        <p class="login-text" style="font-size: 2rem; font-weight: 800;">Create User</p>
        {{ form_start(form) }}
        <div class="input-group">
            <input placeholder="Full Name" {{ form_widget(form.fullName)}}
        </div>
        <div class="input-group">
            <input placeholder="Email" {{ form_widget(form.email)}}
        </div>
        <div class="input-group">
            <input placeholder="Password" {{ form_widget(form.password.first)}}
        </div>
        <div class="input-group">
            <input placeholder="Confirm Password" {{ form_widget(form.password.second)}}
        </div>
       <div class="choice">
           {{ form_widget(form.roles)}}
       </div>
        <div class="input-group">
            <button name="submit" class="btn">Create</button>
        </div>
        {{ form_end(form) }}
    </form>
</div>
</body>
{% endblock %}