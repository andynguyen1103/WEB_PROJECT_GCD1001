{% extends 'base.html.twig' %}

{% block title %}Create Product{% endblock %}

{% block body %}
    <body>
    <div class="container">
        <form method="POST" class="login-email">
            <p class="login-text" style="font-size: 2rem; font-weight: 800;">Create Product</p>
            {{ form_start(form) }}

                {{ form_row(form.name)}}


                {{ form_row(form.category)}}


                {{ form_row(form.price)}}


                {{ form_row(form.description)}}


                {{ form_row(form.productImage)}}

            <div class="input-group">
                <button name="submit" class="btn">Create</button>
            </div>

        </form>
        {{ form_end(form) }}
    </div>
    </body>
{% endblock %}


