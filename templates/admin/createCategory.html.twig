{% extends 'base.html.twig' %}

{% block title %}Create Category{% endblock %}

{% block body %}
    <body>
    <div class="container">
        <form action="" method="POST" class="login-email">
            <p class="login-text" style="font-size: 2rem; font-weight: 800;">Create Category</p>
            {{ form_start(form) }}
            <div class="input-group">
                <input placeholder="Category Name" {{ form_widget(form.name)}}
            </div>
            <div class="input-group">
                <button name="submit" class="btn">Create</button>
            </div>
            {{ form_end(form) }}
        </form>
    </div>
    </body>
{% endblock %}