{% extends 'base.html.twig' %}
{% block title %}Edit User{% endblock %}
{% block body %}
    <div class="userProfile">
        <div class="leftbox"></div>
        <div class="rightbox">
            <div class="edit-user">
                <h1>Edit User Profile</h1>
                {{ form_start(form) }}
                <h2>Username</h2>
                {{ form_widget(form.fullName)}}
                <h2>Email</h2>
                {{ form_widget(form.email)}}
            </div>
            <button name="submit" class="editBtn">Save</button>
            <button name="submit" class="editBtn"><a href="{{ path('admin_user') }}">Back</a></button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}