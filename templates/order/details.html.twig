{% extends 'base.html.twig' %}
{% block body %}
    <div class="orderDetail">
        <div class="leftbox"></div>
        <div class="rightbox">
            <div class="edit-user">
                <h1>Details</h1>
                <h2>Name</h2>
                {{ orders.user.fullName}}
                <h2>Product</h2>
                {{ orders.product.name }}
                <h2>Vendor</h2>
                {{ orders.vendor.name }}
                <h2>Amount</h2>
                {{ orders.amount }}
                <h2>Order date</h2>
                {{ orders.orderDate|date('F j,Y, g:i a') }}
                <h2>Description</h2>
                {{ orders.product.description }}
            </div>
            <button name="submit" class="editBtn"><a href="{{ path('order_list') }}">Back</a></button>
        </div>
    </div>
{% endblock %}