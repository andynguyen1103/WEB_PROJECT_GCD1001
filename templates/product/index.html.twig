{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <div class="User-area">
        {% if app.user %}
            <div class="User">
                | Welcome {{ app.user.fullName }}, <button><a href="{{ path('app_logout') }}" class="UserOption">Logout</a></button> |
            </div>
        {% endif %}
        <!-- introduce section -->
        <div class="introduce">
            <div class="slider">
                <!-- slide item -->
                <div class="slide">
                    <div class="info">
                        <div class="info-content">
                            <h3 class="content-1">
                                Samsung Galaxy S22 Ultra
                            </h3>
                            <h2 class="content-2">
                                New Inspiration 2022
                            </h2>
                            <p class="content-3">
                                Lorem ipsum dolor sit amet consectetur adipisicing elit. Obcaecati dolor commodi dignissimos culpa, eaque eos necessitatibus possimus veniam, cupiditate rerum deleniti? Libero, ducimus error? Beatae velit dolore sint explicabo! Fugit.
                            </p>
                            <div>
                                <button class="btn-flat btn-hover">
                                    <span>Shop now</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="img top-down">
                        <img src="{{ asset('uploads/products/banner_11-removebg-preview.png') }}" alt="">
                    </div>
                </div>
                <!-- end slide item -->
            </div>
        </div>
        <!-- end introduce section -->
    </div>

    <!-- Product list -->
    {% for category in categories %}
    <div class="section">
        <div class="section-header">
            <h2>{{ category.name }}</h2>
        </div>
        <div class="row" id="{{ category.name }}">
            {% for product in products %}
                {% if product.category == category.name  %}
            <div class="col-3 col-md-6 col-sm-12">
                <div class="product-card">
                    <div class="product-card-img">
                        <img src="{{ asset('uploads/products/'~product.image) }}" alt="">
                    </div>
                    <div class="product-card-info">
                        <div class="product-btn">
                            <a href="{{ path ('product_details', {'id':product.id}) }}" class="btn-flat btn-hover btn-shop-now">View</a>
                            <button class="btn-flat btn-hover btn-cart-add">
                                <i class='bx bxs-cart-add'></i>
                            </button>
                            <button class="btn-flat btn-hover btn-cart-add">
                                <i class='bx bxs-heart'></i>
                            </button>
                        </div>
                        <div class="product-card-name">
                            {{ product.name }}
                        </div>
                        <div class="product-card-price">
                            <span>{{ product.price }}</span>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            {% endfor %}
        </div>
    </div>
    <!-- end product list -->
    {% endfor %}

{% endblock %}
