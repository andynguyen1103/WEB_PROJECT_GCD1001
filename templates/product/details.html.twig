{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('product_details') }}" class="btn btn-default">Back to Product List</a>
    <hr/>
    <h2 class="page-header">{{ products.name }}</h2>
    <ul class="list-group">
        <li class="list-group-item">Category: {{ products.category.name }}</li>
        <li class="list-group-item">Price: {{ products.price }}</li>
    </ul>
    <p>{{ products.category.description }}</p>
{% endblock %}